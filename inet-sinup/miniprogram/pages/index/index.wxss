/* pages/index/index.wxss */

.info-box{
  width: 80%;
}
.avatar-img {
  width: 100px;
  height: 100px;
  border: 1px solid gray;
}
.info-box>text{
  display: block;
  margin-left: 20%;
  margin-top: 4%;
}


.user_info_wrap {
  height: 45vh;
  overflow: hidden;
  background-image: url('https://img1.baidu.com/it/u=1136308707,3701211095&fm=26&fmt=auto&gp=0.jpg');
  position: relative;
}
.user_info_wrap .user_img_wrap {
  position: relative;
}
.user_info_wrap .user_img_wrap .user_bg {
  height: 50vh;
  filter: blur(10rpx);
}
.user_info_wrap .user_img_wrap .user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20%;
  text-align: center;
}
.user_info_wrap .user_img_wrap .user_info .user_icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_info_wrap .user_img_wrap .user_info .user_name {
  color: #003300;
  font-size: 40rpx;
  margin-top: 40rpx;
}
.user_bg{
  width: 100%;
}
.user_info_wrap .user_btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 45%;
  color: black;
  font-size: 38rpx;
  letter-spacing: 4rpx;
  background-color: #fff;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
}
.content{
  height: 500px;
  background-color: #efefef;
  
}
.hr {
  width: 100%;
  height: 15px;
  background-color: #f4f5f6;
}

.item {
  
background-color: #fff;
  height: 100rpx;
  display: flex;
  flex-direction: row;
}
.iconfont{
  padding-left: 20px;
  padding-top: 24rpx;
  letter-spacing: 1px;
}
.title {

  padding-top: 24px;
  padding-bottom: 15px;
  padding-left: 15px;
  font-size: 15px;
}


.detail2 {
  font-size: 15px;
  position: absolute;
  right: 10px;
  height: 40px;
  line-height: 40px;
  color: #888;
}

.line {
  border: 1px solid #ccc;
  opacity: 0.2;
}

